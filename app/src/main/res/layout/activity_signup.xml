        android:ems="10"
        android:hint="@string/field_email_title"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:padding="10dp"

        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorFormHighlight"
        android:textColorHint="@color/colorGreyLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_tv_email_title" />


    <TextView
        android:id="@+id/sign_up_tv_phone_title"
